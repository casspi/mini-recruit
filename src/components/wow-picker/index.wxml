<view class="wow-picker">
  <view class="label">{{item.label}}</view>
  <picker
    bindchange="handleChange"
    range="{{item.options}}"
    range-key="{{item.rangeKey}}"
    value="{{item.value}}"
    data-item="{{item}}"
    mode="selector"
    >
    <view class="value">{{ item.value.label || item.placeholder }}<view class="c-arrow right"></view></view>
  </picker>
</view>
