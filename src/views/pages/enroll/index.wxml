<wxs src="/wxs/filter.wxs" module="filter" />

<wow-scroll
  id="wowScroll"
  class="enroll-list"
  bindscrolltolower="pagingLoad"
  bindrefresh="pagingRefresh">
    <wow-skeleton
      bindrefresh="pagingRefresh"
      error="{{ error }}"
      wx:if="{{ pagingTotal <= 0 }}"
      is-loading="{{ pagingTotal === -1 }}"
    ></wow-skeleton>
    <block
    wx:for="{{ pagingData  }}"
    wx:key="arrIndex"
    wx:for-item="arrData"
    wx:for-index="arrIndex">
      <view
      class="enroll-item"
      bindtap="jumpPageOrFireFn"
      data-url="auction_index"
      wx:for="{{ 8 }}"
      wx:key="index">
        <view class="enroll-item-top">
          <view class="patient">
            <view class="name">刘备</view>
            <view class="status">
              <text>医学审核中</text>
            </view>
          </view>
          <view class="time">
            <tex>03-18 16:05</tex>
          </view>
        </view>
        <view class="enroll-item-detail">
          <view class="disease">
            <block
              wx:for="{{ 8 }}"
              wx:key="index"
            >
              <text >{{index === 0?'感冒':';拉肚子'}}</text>
            </block>
          </view>
          <view class="number-warp">
            <text class="number-label">患者编码</text>
            <text class="number-value">555#hjbkkkkj</text>
          </view>
        </view>
      </view>
    </block>
</wow-scroll>

