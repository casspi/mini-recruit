<wxs src="/wxs/filter.wxs" module="filter"/>

<view class="login-page">
  <view class="header">
    <image class="logo"/>
    <text class="title">xx招募之家</text>
    <text wx:if="{{invitationCode}}" class="code" space="false">推荐码:{{invitationCode}}</text>
  </view>
  <view class="login-form">
    <view class="form-item">
      <view class="form-item__title">手机号</view>
      <view class="form-item-cells form-item_after-title">
        <view class="form-item-cells form-item_input">
          <input
            value="{{phone}}"
            bindinput="inputHandle"
            data-item="phone"
            class="form-input"
            type="number"
            maxlength="11"
            placeholder="请输入手机号"/>
        </view>
      </view>
    </view>
    <view class="form-item form-item-code">
      <view class="form-item__title">验证码</view>
      <view class="form-item-cells form-item_after-title">
        <view class="form-item-cells form-item_input">
          <input value="{{code}}"
             bindinput="inputHandle"
             data-item="code"
             class="form-input"
             type="number"
             maxlength="6"
             placeholder="请输入验证码"/>
          <button class="btn-code" disabled="{{!filter.isPhone(phone) || conut > 0}}" bindtap="handleCode">{{filter.renderCodeBtn(conut)}}</button>
        </view>
      </view>
    </view>
  </view>
  <button
    class="button is-submit mt-80"
    disabled="{{!filter.isPhone(phone) || !filter.isCode(code) || !isAgreement}}"
    bindtap="handleSubmit"
  >立即登录{{!filter.isPhone(phone) || !filter.isCode(code) || !isAgreement}}</button>
  <button class="button mt-30" bindtap="routerPop">访客登录</button>
  <view class="agreement {{ isAgreement && 'is-active' }}"
        bindtap="inputHandle"
        data-value="{{ !isAgreement }}"
        data-item="isAgreement">
    <view class="agreement-icon iconfont icon-xuanzhong"></view>
    <view class="agreement-text">
      <text>已认真阅读xxx朝暮之家</text>
      <text class="strong"
            catchtap="jumpPageOrFireFn"
            data-url="webview_index"
            data-params="{{ { title: '用户服务协议', link: 'https://developers.weixin.qq.com/miniprogram/dev/reference/api/Page.html#onReady' } }}"
      >《用户服务协议》
      </text>
      <text class="strong"
            catchtap="jumpPageOrFireFn"
            data-url="webview_index"
            data-params="{{ { title: '隐私政策', link: 'https://www.baidu.com' } }}"
      >《隐私政策》
      </text>
      <text>并接受协议内容</text>
    </view>
  </view>
</view>
