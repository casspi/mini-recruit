<view class="c-block info-detail">
  <view class="patient-top">
    <view class="name">刘备</view>
    <view class="status">
      <text>医学审核中</text>
    </view>
  </view>
  <view
    class="info-item"
    bindtap="jumpPageOrFireFn"
    data-item="{{ item }}"
    wx:for="{{ infoObj }}"
    wx:key="index">
    <view class="info-item-label"><text>{{item.label}}</text></view>
    <view class="info-item-value">
      <text>{{item.value}}</text>
      <view class="c-arrow right" wx:if="{{item.arrow}}"></view>
    </view>
  </view>
</view>
